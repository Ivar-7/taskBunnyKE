<div class="container mt-5">
  <div class="row">
    <div class="col-6 offset-3">
      <div id="<%= dom_id(message) %>" class="card">
        <div class="card-body">
          <h5 class="card-title"><strong>Sender:</strong> <%= message.sender_id %></h5>
          <p class="card-text"><strong>Recipient:</strong> <%= message.recipient_id %></p>
          <p class="card-text"><strong>Content:</strong> <%= message.content %></p>
        </div>
      </div>
    </div>
  </div>
</div>
