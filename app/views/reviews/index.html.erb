<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <p style="color: green"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center">
      <h1 class="display-4">Reviews</h1>
    </div>
  </div>

  <div id="reviews">
  <% @reviews.each do |review| %>
    <div class="col-4 review-wrapper" data-review-id="<%= review.id %>">
      <%= render review %>
    </div>
  <% end %>
  </div>

  <div class="row">
    <div class="col-12 text-center mt-4">
      <%= link_to "New review", new_review_path, class: "btn btn-success" %>
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.review-wrapper').forEach(function (wrapper) {
      wrapper.addEventListener('click', function () {
        var reviewId = this.getAttribute('data-review-id');
        window.location.href = '/reviews/' + reviewId;
      });
    });
  });
</script>