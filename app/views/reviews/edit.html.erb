<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <h1 class="display-4">Editing review</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-3">
      <%= render "form", review: @review %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center mt-4">
      <%= link_to "Show this review", @review, class: "btn btn-info" %> |
      <%= link_to "Back to reviews", reviews_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
