<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <p style="color: green"><%= notice %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-12 text-center">
      <h1 class="display-4">Taskers</h1>
    </div>
  </div>
  <div class="row justify-content-end">
    <% if user_signed_in? %>
      <div class="col-auto text-right mt-4">
        <%= link_to "Register as tasker", new_tasker_path, class: "btn btn-success" %>
      </div>
    <% else %>
      <div class="col-auto text-right mt-4">
        <%= link_to 'Register as tasker', new_user_session_path, class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <% @taskers.each do |tasker| %>
      <div class="col-12 col-md-6 col-lg-4 tasker-wrapper" data-tasker-id="<%= tasker.id %>">
        <%= render tasker, truncate_description: true %>
      </div>
    <% end %>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.tasker-wrapper').forEach(function (wrapper) {
      wrapper.addEventListener('click', function () {
        var taskerId = this.getAttribute('data-tasker-id');
        window.location.href = '/taskers/' + taskerId;
      });
    });
  });
</script>