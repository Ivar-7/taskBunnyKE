<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <h1 class="display-4">Editing tasker</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-3">
      <%= render "form", tasker: @tasker %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center mt-4">
      <%= link_to "Show this tasker", @tasker, class: "btn btn-primary" %>
      <%= link_to "Back to taskers", taskers_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
