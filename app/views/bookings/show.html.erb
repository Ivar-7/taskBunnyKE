<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <p style="color: green"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-3">
      <%= render @booking %>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-3">
      <div class="text-center mt-4">
        <%= link_to "Edit this booking", edit_booking_path(@booking), class: "btn btn-info my-2" %>
        <%= link_to "Back to bookings", bookings_path, class: "btn btn-secondary my-2" %>

        <%= button_to "Destroy this booking", @booking, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
