<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <h1 class="display-4">Services</h1>
    </div>
  </div>
  <% if user_signed_in? && current_user.email == "cookie@me.con" %>
    <div class="row">
      <div class="col-12 text-center mt-4">
        <%= link_to "New service", new_service_path, class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
  <div class="row">
    <% @services.each do |service| %>
      <div class="col-12 col-md-6 col-lg-4 service-wrapper" data-service-id="<%= service.id %>">
        <%= render service %>
      </div>
    <% end %>
  </div>
</div>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.service-wrapper').forEach(function (wrapper) {
      wrapper.addEventListener('click', function () {
        var serviceId = this.getAttribute('data-service-id');
        window.location.href = '/services/' + serviceId;
      });
    });
  });
</script>