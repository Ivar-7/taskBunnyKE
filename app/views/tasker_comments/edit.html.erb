<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <h1 class="display-4">Editing tasker comment</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-6 offset-3">
      <%= render "form", tasker_comment: @tasker_comment %>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center mt-4">
      <%= link_to "Show this tasker comment", @tasker_comment, class: "btn btn-info" %> |
      <%= link_to "Back to tasker comments", tasker_comments_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
