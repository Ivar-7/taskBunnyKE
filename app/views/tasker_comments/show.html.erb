<div class="container mt-5">
  <div class="row">
    <div class="col-12 text-center">
      <p style="color: green"><%= notice %></p>
    </div>
  </div>

  <div class="row">
    <div class="col-8 offset-2">
      <div id="<%= dom_id(@tasker_comment) %>" class="card">
        <div class="card-body">
          <%= render @tasker_comment %>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-12 text-center mt-4">
      <%= link_to "Edit this tasker comment", edit_tasker_comment_path(@tasker_comment), class: "btn btn-primary" %> |
      <%= link_to "Back to tasker comments", tasker_comments_path, class: "btn btn-secondary" %> |
      <%= button_to "Destroy this tasker comment", @tasker_comment, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
